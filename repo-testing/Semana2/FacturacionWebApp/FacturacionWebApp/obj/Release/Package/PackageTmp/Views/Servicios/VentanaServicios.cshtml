
@{
    //Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <title>Servicios</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css" integrity="sha512-10/jx2EXwxxWqCLX/hHth/vu2KY3jCF70dCQB8TSgNjbCVAC/8vai53GfMDrO2Emgwccf2pJqxct9ehpzG+MTw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    @Styles.Render("~/Content/css")
</head>

<body>
    <div class="container">
        <div class="card-general">
            <h3 class="title">Bienvenido a nuestro portal de productos y servicios</h3>
            <h4 class="sub-title">Elije uno y actívalo hoy mismo desde tu computadora o smartphone</h4>

            <div class="row">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Producto</h5>
                            <p class="icono"><i class="fa-solid fa-cart-plus"></i></p>
                            <button class="btn-cont" id="Btn-Producto">Ver</button>

                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Usuario Perfil</h5>
                            <p class="icono"><i class="fa-solid fa-user"></i></p>
                            <button class="btn-cont" id="btnUsuario">Ver</button>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Facturacion</h5>
                            <p class="icono"><i class="fa-solid fa-cart-plus"></i></p>
                            <button class="btn-cont" id="btnFacturar">Ver</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<script>
    var urlServProducto = "@Url.Action("Index", "Producto")"; //controlador,accion
    var urlServFacturar = "@Url.Action("Index", "Facturar")";
    var urlServCliente = "@Url.Action("Index", "Cliente")";
    $(function () {
        $("#Btn-Producto").click(function () {
            window.location.href = urlServProducto;
        });
        $("#btnFacturar").click(function () {
            window.location.href = urlServFacturar;
        });
        $("#btnUsuario").click(function () {
            window.location.href = urlServCliente;
        });
    });
</script>